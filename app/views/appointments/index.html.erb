<div class="container">
    <div class="profile-pic">
    <% if current_user.photo.attached? %>
		  <%= cl_image_tag @user.photo.key,
		  transformation: [{width: 400, height: 400, gravity: "face", radius: "max", crop: "fill", quality: 80}, {width: 400, crop: "scale"}],
		  class: "avatar-large"%>
    <% else %>
      <%= image_tag("user.png", width: 100, height: 100 ) %>
    <% end %>
	  </div>
    <h2><%= @user.fullname %></h2>
    <div><%= link_to 'atualizar', edit_user_registration_path(@user) %></div>
    <h2>Meus agendamentos</h2>
    <% @appointments.each do |appointment| %>
      <p><%= appointment.date %></p>
      <p><% appointment.procedures.each do |procedure| %></p>
        <p><%= procedure.service.title %> | 
        <%= procedure.dentist.user.fullname %> 
      <% end %>
      <div><%= link_to 'detalhes', appointment_path(appointment) %></div>
      <div><%= link_to 'editar', edit_appointment_path(appointment) %></div>
      <div><%= link_to 'Excluir', appointment, method: :delete, data: { confirm: 'Delete?' } %></div>
    <% end %>
  <div><%= link_to "Novo agendamento", new_appointment_path %></div>
</div>



