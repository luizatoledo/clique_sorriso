<% if current_user.admin %>
	<%= simple_form_for dentist do |f| %>
		<p>Selecione o usu√°rio: </p>
		<%= f.select :user_id, User.where(role:'dentist').map { |u| [u.fullname, u.id ] }, include_blank: true %>
