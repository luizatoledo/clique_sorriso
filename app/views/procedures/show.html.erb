<div class="procedure-card">
    <div class="service-photo">
        <%= (cl_image_tag @procedure.service.photo.key, class: "service-photo") if @procedure.service.photo.attached? %>
    </div>

    <div class="procedure-infos">
        <div class="procedure-info">
            <div class="procedure-info-title">Dentist</div>
            <div class="procedure-info-content"><%= @procedure.dentist.user.fullname %></div>
            
        </div>
        <div class="procedure-info">
            <div class="procedure-info-title">Service</div>
            <div class="procedure-info-content"><%= @procedure.service.title %></div>
        
        </div>
        <div class="procedure-info">
            <div class="procedure-info-title">Duration</div>
            <div class="procedure-info-content"> <%= @procedure.service.duration %> min</div>
       
        </div>
        <div class="procedure-info">
            <div class="procedure-info-title">Description</div>
            <div class="procedure-info-content"><%= @procedure.service.description %>wsdfghjklmjhugftdsewedcfvgbhnjmkjnhbgvfcdrxsewaexdcrfvgbhnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn</div>
        </div>
        <div class="procedure-info">
            <%= link_to  "Edit", edit_procedure_path(@procedure), class: "btn btn-primary" %>
            <%= link_to 'Delete', @procedure, method: :delete, data: { confirm: 'Delete?' }, class: "btn btn-primary"  %>
            <%= link_to  "Back", procedures_path, class: "btn btn-primary"  %>
        </div>
    </div>
</div>



